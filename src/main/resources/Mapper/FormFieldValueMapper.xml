<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wh.fcfz.officecontroller.all.mapper.FormFieldValueMapper">

    <resultMap type="wh.fcfz.officecontroller.all.bean.Vo.FormFieldValueVo" id="FormFieldValueResult">
            <id property="id" column="id"/>
    </resultMap>

    <select id="selecFormFieldValueListByFormId" resultMap="FormFieldValueResult">
        select
            v.id,
            f.field_title,
            f.field_type,
            f.field_sort,
            f.validation_rule,
            f.is_required,
            f.form_item_type,
            f.default_value,
            v.field_value
        from form_template_field f
        left join form_field_value v on f.field_id = v.field_id
        <if test="formId != null">
            <where>
                v.form_id = #{formId}
            </where>
        </if>
        order by f.field_sort asc
    </select>

</mapper>
